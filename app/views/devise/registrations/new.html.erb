<div class="container">
  <div class = "row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">
        <% if params[:plan]=="2" %>
          <h1>Pro Account</h1>
          <p>Sign up for the Pro account for Â£1/month and get access to Premium features!</p>
          <p class="test-notice">Please note: The payment functionality is currently in test mode to allow you to explore the Premium features for free! Simply use the card number below, any CVV number and future expiry date to register.</p>
          <%= image_tag "number.JPG", class:'number'%>
        <% else %>
          <h1>Basic Account</h1>
          <p>Sign up for free and get basic access to this website.</p>
        <% end %>
      </div>
      <div class="well">
        <h2>Sign up</h2>
        <% if params[:plan]=="2" %>
          <%== render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>